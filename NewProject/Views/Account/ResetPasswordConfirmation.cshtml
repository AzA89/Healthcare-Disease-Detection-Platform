@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h2 class="text-center mb-0"><i class="fas fa-check-circle me-2"></i> @ViewData["Title"]</h2>
            </div>
            <div class="card-body text-center p-5">
                <div class="success-icon mb-4">
                    <i class="fas fa-lock-open fa-4x text-success"></i>
                </div>
                
                <h4>Your password has been reset successfully</h4>
                <p class="mb-4">You can now log in with your new password.</p>
                
                <a asp-action="Login" class="btn btn-primary btn-lg px-5">
                    <i class="fas fa-sign-in-alt me-2"></i> Go to Login
                </a>
            </div>
        </div>
    </div>
</div>
