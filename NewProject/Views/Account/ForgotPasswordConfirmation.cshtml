@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h2 class="text-center mb-0"><i class="fas fa-check-circle me-2"></i> @ViewData["Title"]</h2>
            </div>
            <div class="card-body text-center p-5">
                <p>We've sent a verification code to your email. Please check your inbox.</p>
                <p>If you don't see the email after a few minutes, please check your spam folder.</p>
                
                <div class="mt-4">
                    <a asp-action="ResetPassword" class="btn btn-primary">
                        <i class="fas fa-key me-2"></i> Continue to Reset Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
