@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity?.IsAuthenticated == true)
{
    <!-- Hero Section -->
    <div class="hero-section bg-dark text-white py-5 mb-5 rounded">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-3">AI-Powered Medical Diagnostics</h1>
                    <p class="lead mb-4">
                        Advanced disease detection and health assessment tools using artificial intelligence and machine learning.
                    </p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a asp-controller="Detection" asp-action="Index" class="btn btn-light btn-lg px-4 me-md-2">
                            <i class="fas fa-heartbeat me-2"></i> Disease Detection
                        </a>
                        <a asp-controller="Symptom" asp-action="Checker" class="btn btn-outline-light btn-lg px-4">
                            <i class="fas fa-stethoscope me-2"></i> Symptom Checker
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="text-center p-4">
                        <i class="fas fa-heartbeat fa-6x mb-3"></i>
                        <h3 class="text-white">Medical AI Platform</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container mb-5">
        <h2 class="text-center mb-4">Our Medical AI Services</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-dark text-white rounded-circle mb-3">
                            <i class="fas fa-heartbeat"></i>
                        </div>
                        <h3 class="card-title h5">Heart Disease Detection</h3>
                        <p class="card-text">
                            Assess your risk of heart disease using our AI model trained on clinical data.
                        </p>
                        <a asp-controller="Detection" asp-action="Index" class="btn btn-outline-dark mt-2">
                            Try Now
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-dark text-white rounded-circle mb-3">
                            <i class="fas fa-prescription-bottle-alt"></i>
                        </div>
                        <h3 class="card-title h5">Diabetes Risk Assessment</h3>
                        <p class="card-text">
                            Evaluate your diabetes risk factors with our advanced prediction model.
                        </p>
                        <a asp-controller="Detection" asp-action="Index" class="btn btn-outline-dark mt-2">
                            Try Now
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-dark text-white rounded-circle mb-3">
                            <i class="fas fa-stethoscope"></i>
                        </div>
                        <h3 class="card-title h5">Symptom Checker</h3>
                        <p class="card-text">
                            Enter your symptoms and get AI-powered disease predictions and recommendations.
                        </p>
                        <a asp-controller="Symptom" asp-action="Checker" class="btn btn-outline-dark mt-2">
                            Try Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works Section -->
    <div class="bg-light py-5 mb-5 rounded">
        <div class="container">
            <h2 class="text-center mb-4">How It Works</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="text-center">
                        <div class="step-circle bg-dark text-white mb-3">1</div>
                        <h3 class="h5">Enter Your Data</h3>
                        <p>Provide your medical parameters and symptoms through our user-friendly forms.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <div class="step-circle bg-dark text-white mb-3">2</div>
                        <h3 class="h5">AI Analysis</h3>
                        <p>Our machine learning models analyze your data to generate predictions.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <div class="step-circle bg-dark text-white mb-3">3</div>
                        <h3 class="h5">Get Results</h3>
                        <p>Receive detailed risk assessments and probability scores for various conditions.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <div class="step-circle bg-dark text-white mb-3">4</div>
                        <h3 class="h5">Recommendations</h3>
                        <p>Get personalized health recommendations and next steps based on your results.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="container mb-5">
        <h2 class="text-center mb-4">What Our Users Say</h2>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="card shadow-sm">
                                <div class="card-body p-4 text-center">
                                    <i class="fas fa-quote-left fa-2x text-dark mb-3"></i>
                                    <p class="lead mb-4">
                                        "The heart disease risk assessment tool helped me identify risk factors I wasn't aware of. I've made lifestyle changes based on the recommendations and my latest check-up showed improvement."
                                    </p>
                                    <div class="d-flex justify-content-center">
                                        <div class="testimonial-avatar">
                                            <img src="~/images/avatar-1.jpg" alt="User Avatar" class="rounded-circle">
                                        </div>
                                        <div class="ms-3 text-start">
                                            <h5 class="mb-1">John D.</h5>
                                            <p class="text-muted mb-0">Heart Disease Assessment User</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="card shadow-sm">
                                <div class="card-body p-4 text-center">
                                    <i class="fas fa-quote-left fa-2x text-dark mb-3"></i>
                                    <p class="lead mb-4">
                                        "The symptom checker accurately identified my condition when I was experiencing unusual symptoms. It prompted me to seek medical attention, which led to early treatment."
                                    </p>
                                    <div class="d-flex justify-content-center">
                                        <div class="testimonial-avatar">
                                            <img src="~/images/avatar-2.jpg" alt="User Avatar" class="rounded-circle">
                                        </div>
                                        <div class="ms-3 text-start">
                                            <h5 class="mb-1">Sarah M.</h5>
                                            <p class="text-muted mb-0">Symptom Checker User</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="card shadow-sm">
                                <div class="card-body p-4 text-center">
                                    <i class="fas fa-quote-left fa-2x text-dark mb-3"></i>
                                    <p class="lead mb-4">
                                        "As a healthcare professional, I'm impressed with the accuracy of the diabetes risk assessment tool. I've recommended it to several patients as a preliminary screening method."
                                    </p>
                                    <div class="d-flex justify-content-center">
                                        <div class="testimonial-avatar">
                                            <img src="~/images/avatar-3.jpg" alt="User Avatar" class="rounded-circle">
                                        </div>
                                        <div class="ms-3 text-start">
                                            <h5 class="mb-1">Dr. Robert K.</h5>
                                            <p class="text-muted mb-0">Healthcare Professional</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-dark text-white py-5 rounded mb-5">
        <div class="container text-center">
            <h2 class="mb-3">Ready to assess your health?</h2>
            <p class="lead mb-4">
                Our AI-powered tools can help you understand your health risks and make informed decisions.
            </p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-controller="Detection" asp-action="Index" class="btn btn-light btn-lg px-4 gap-3">
                    <i class="fas fa-heartbeat me-2"></i> Start Assessment
                </a>
                <a asp-controller="Home" asp-action="About" class="btn btn-outline-light btn-lg px-4">
                    <i class="fas fa-info-circle me-2"></i> Learn More
                </a>
            </div>
        </div>
    </div>

    <!-- Latest Articles Section -->
    <div class="container mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Latest Health Articles</h2>
            <a href="#" class="btn btn-outline-dark">View All</a>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/article-1.jpg" class="card-img-top" alt="Article Image">
                    <div class="card-body">
                        <span class="badge bg-dark mb-2">Heart Health</span>
                        <h3 class="card-title h5">Understanding Heart Disease Risk Factors</h3>
                        <p class="card-text">Learn about the key risk factors for heart disease and how to mitigate them through lifestyle changes.</p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a href="#" class="btn btn-link p-0 text-dark">Read More <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/article-2.jpg" class="card-img-top" alt="Article Image">
                    <div class="card-body">
                        <span class="badge bg-dark mb-2">Diabetes</span>
                        <h3 class="card-title h5">Managing Diabetes Through Diet and Exercise</h3>
                        <p class="card-text">Discover effective strategies for managing diabetes through proper nutrition and regular physical activity.</p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a href="#" class="btn btn-link p-0 text-dark">Read More <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/article-3.jpg" class="card-img-top" alt="Article Image">
                    <div class="card-body">
                        <span class="badge bg-dark mb-2">Prevention</span>
                        <h3 class="card-title h5">Preventive Health Measures Everyone Should Take</h3>
                        <p class="card-text">Explore essential preventive health measures that can help you maintain optimal health and prevent disease.</p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a href="#" class="btn btn-link p-0 text-dark">Read More <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Simple Welcome Section for Unauthenticated Users -->
    <div class="hero-section bg-dark text-white py-5 mb-5 rounded">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-3">Welcome to MedScan Pro</h1>
                    <p class="lead mb-4">
                        Please log in or register to access our AI-powered medical diagnostics tools.
                    </p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg px-4 me-md-2">
                            <i class="fas fa-sign-in-alt me-2"></i> Login
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg px-4">
                            <i class="fas fa-user-plus me-2"></i> Register
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="text-center p-4">
                        <i class="fas fa-heartbeat fa-6x mb-3"></i>
                        <h3 class="text-white">Medical AI Platform</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
